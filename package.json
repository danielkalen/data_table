{
  "name": "@danielkalen/data_table",
  "version": "2.9.1",
  "description": "Tiny library for displaying database-fetched data in an HTML table with front-end pagination",
  "main": "dist/js/data_table.js",
  "browser": {
    "./debug": "dist/js/data_table.debug.js",
    "./dist/js/data_table.js": "src/coffee/index.coffee"
  },
  "browserify": {
    "transform": [
      "simplyimport/compat"
    ]
  },
  "dependencies": {
    "@danielkalen/sass-base": "^1.5.2",
    "@danielkalen/simplybind": "^1.15.8",
    "bluebird": "^3.5.0",
    "escape-html": "^1.0.3",
    "extend": "^3.0.0"
  },
  "devDependencies": {
    "chalk": "^2.0.1",
    "coffee-script": "^1.12.6",
    "fs-jetpack": "^1.1.0",
    "node-sass": "^4.5.3",
    "promise-break": "^0.1.1",
    "sass-module-importer": "github:danielkalen/sass-module-importer",
    "simplyimport": "^4.0.0-s7",
    "simplywatch": "^3.0.0-l2",
    "smart-extend": "^1.7.2"
  },
  "sassFns": "node_modules/@danielkalen/sass-base/compiler-fns.js",
  "sassImporter": "node_modules/sass-module-importer/lib/index.js",
  "scripts": {
    "postversion": "npm run build && git add . && git commit -a -m '[Build]'",
    "postpublish": "git push",
    "build": "cake install:build; cake -d build && cake build && cp -r build/* dist/",
    "compile": "cake -d build",
    "watch": "cake install; cake -d watch",
    "watch:js": "simplywatch 'src/coffee/*.coffee' -e 'coffee' -x 'npm run compile:js:debug -s'",
    "watch:sass": "fontsDir=dist/fonts simplywatch 'src/sass/*.sass' -e 'sass' -x 'npm run compile:sass:debug -s'",
    "takana": "fontsDir=dist/fonts takana -f $(pwd)/$npm_package_sassFns $(pwd)/src/sass"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danielkalen/data_table.git"
  },
  "author": "Daniel Kalen",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/danielkalen/data_table/issues"
  },
  "homepage": "https://github.com/danielkalen/data_table#readme"
}
