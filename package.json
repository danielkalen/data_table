{
  "name": "@danielkalen/data_table",
  "version": "1.0.3",
  "description": "Tiny library for displaying database-fetched data in an HTML table with front-end pagination",
  "main": "dist/js/data_table.js",
  "devDependencies": {
    "closure-compiler-service": "^0.6.1",
    "coffee-script": "^1.10.0",
    "foreach-cli": "^1.6.1",
    "fsevents": "^1.0.15",
    "json": "^9.0.4",
    "node-sass": "^3.4.2",
    "simplyimport": "^2.2.1",
    "simplywatch": "^2.2.0",
    "uglify-js": "^2.6.2"
  },
  "sassFns": "node_modules/@danielkalen/sass-base/compiler-fns.js",
  "scripts": {
    "postversion": "echo \\'$(json -f package.json version)\\' > .version.coffee && npm run build",
    "build": "npm run compile && npm run minify",
    "compile": "npm run compile:js && npm run compile:sass",
    "compile:js": "foreach -g 'src/coffee/*.coffee' -x 'simplyimport -i {{path}} | coffee -b -s -c > dist/js/{{name}}.pretty.js'",
    "compile:sass": "fontsDir=dist/fonts foreach -g 'src/sass/*.sass' -x 'node-sass --functions $(pwd)/$npm_package_sassFns -x --output-style compressed {{path}} --output dist/css/'",
    "compile:sass:pretty": "fontsDir=dist/fonts foreach -g 'src/sass/*.sass' -x 'node-sass --functions $(pwd)/$npm_package_sassFns -x --output-style nested {{path}} --output dist/css/'",
    "minify": "closure-service dist/js/data_table.pretty.js > dist/js/data_table.js",
    "watch": "npm run watch:js & npm run watch:sass",
    "watch:js": "simplywatch 'src/coffee/*.coffee' -e 'coffee' -x 'simplyimport -i {{path}} | coffee -b -s -c > dist/js/{{name}}.pretty.js && uglifyjs dist/js/{{name}}.pretty.js -m -c keep_fargs,unused=false > dist/js/{{name}}.js'",
    "watch:sass": "simplywatch 'src/sass/*.sass' -e 'sass' -x 'node-sass --functions ./sass-fns.js -x --output-style compressed {{path}} --output dist/css/'",
    "takana": "fontsDir=dist/fonts takana -f $(pwd)/$npm_package_sassFns $(pwd)/src/sass"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danielkalen/data_table.git"
  },
  "author": "Daniel Kalen",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/danielkalen/data_table/issues"
  },
  "homepage": "https://github.com/danielkalen/data_table#readme",
  "dependencies": {
    "@danielkalen/sass-base": "^1.3.2",
    "@danielkalen/simplybind": "^1.7.1",
    "bluebird": "^3.4.6"
  }
}
